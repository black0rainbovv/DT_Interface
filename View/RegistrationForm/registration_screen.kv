#:import STANDARD_INCREMENT kivymd.material_resources.STANDARD_INCREMENT

<RegistrationScreenView>
    hero_to: hero_to

    MDIconButton:
        id: back_btn
        icon: "arrow-left-circle-outline"
        icon_size: "64sp"
        pos_hint: {"top": 1}
        theme_icon_color: "Custom"
        icon_color: "#006492"
        on_release: root.switch_screen("main screen")

    CommonLabel:
        x: field_login.x
        y: root.height - root.SHIFT_Y
        opacity: root.OPACITY
        text: "Регистрация"

    FillField:
        id: field_login
        opacity: root.OPACITY
        hint_text: "Имя"
        icon_left: "account"
        hint_text_color_normal: 'white'
        text_color_normal: 'white'
        helper_text_color_normal: 'white'
        line_color_normal: 'white'
        pos:
            root.center[0] - root.FIELD_WIDTH / 2, \
            root.center[1] + root.SHIFT_Y / 4

    FillField:
        id: field_password
        opacity: root.OPACITY
        hint_text: "Пароль"
        icon_left: "lock"
        hint_text_color_normal: 'white'
        text_color_normal: 'white'
        helper_text_color_normal: 'white'
        line_color_normal: 'white'
        password: True
        pos:
            root.center[0] - root.FIELD_WIDTH / 2, \
            root.center[1] - root.SHIFT_Y / 4

    MDFillRoundFlatButton:
        id: sign_in_button
        text: "Войти"
        opacity: root.OPACITY
        size_hint_x: None
        -width: field_password.width
        pos_hint: {"center_x": .5}
        font_size: "24sp"
        font_name: "assets/fonts/futuralightc.otf"
        md_bg_color: .8, .8, .8, 1
        text_color: app.theme_cls.primary_color
        ripple_color: app.theme_cls.primary_color[:-1] + [.4]
        y: root.SHIFT_Y

    MDFillRoundFlatButton:
        id: reg_button
        on_release: root.open_dialog_window()
        text: "Регистрация"
        opacity: root.OPACITY
        size_hint_x: None
        -width: field_password.width
        pos_hint: {"center_x": .5 }
        font_size: "24sp"
        font_name: "assets/fonts/futuralightc.otf"
        md_bg_color: .8, .8, .8, 1
        text_color: app.theme_cls.primary_color
        ripple_color: app.theme_cls.primary_color[:-1] + [.4]
        y: root.SHIFT_Y / 2

    MDHeroTo:
        id:hero_to
        size_hint: None, None
        size: "56dp", "56dp"
        pos: root.width - (self.width + dp(12)), root.height - (self.height + dp(12))
