#:import STANDARD_INCREMENT kivymd.material_resources.STANDARD_INCREMENT

<SettingScreenView>

    MDBoxLayout:
        orientation: "vertical"
        padding: 22
        spacing: 12

        MDIconButton:
            id: back_btn
            icon: "arrow-left-circle-outline"
            icon_size: "64sp"
            pos_hint: {"top": 1}
            theme_icon_color: "Custom"
            icon_color: "#006492"
            on_release: root.switch_screen("main screen")

        MDBoxLayout:
            orientation: "vertical"
            pos_hint: {"center_x": 0.5,"center_y": 0.5}
            padding: [80, 0, 0, 0]
            
            SettingCard:
                on_release: root.switch_screen("about device screen")

                FitImage:
                    source: "assets/images/dtprime.png"
                    radius: 24, 24, 0, 0
                    size_hint_y: 3
                    pos_hint: {"top": 1}

                SettingLabel:
                    text: "О приборе"

        MDBoxLayout:
            size_hint_y: 0.15

            MDLabel:
                pos_hint: {"center_x": 0.5,"center_y": 0.5}
                text: "ООО «НПО ДНК - Технология»"
                color: "white"
                font_name: "assets/fonts/futuralightc.otf"
                font_size: "36sp"
            