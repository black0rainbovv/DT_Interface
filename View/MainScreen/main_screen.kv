#:import STANDARD_INCREMENT kivymd.material_resources.STANDARD_INCREMENT

<MainScreenView>
        
    MDBoxLayout:
        orientation: "vertical"
        pos_hint: {"center_x": 0.5, "center_y": 0.5}
        
        MDTopAppBar:
            id: maintopbar
            line_color: (0.2, 0.2, 0.2, 0.8)
            md_bg_color:"#001b31"
            right_action_items: 
                [
                ["help-circle", lambda x: root.callback(x), "Помощь"],
                ["arrow-up-drop-circle-outline", lambda x: root.callback(x), "Открыть\Закрыть"],
                ["power", lambda x: root.callback(x), "Выключение"]
                ]  

        MDBoxLayout:
            pos_hint: {"center_x": 0.5,"center_y": 0.45}
            size_hint: 1, 0.2
            # md_bg_color: 1, 1, 1, 0.5
            height: 10
            padding: [30, 0, 0, 0]

            MDLabel:
                id: device_status
                pos_hint: {'left': 1}
                text: "Состояние прибора:"
                color: "white"
                font_size: "24sp"
                font_name: "assets/fonts/futuralightc.otf"
                font_style: "H6"

            MDLabel:
                id: temperature
                pos_hint: {'right': 1}
                text: "Температура термоблока:"
                color: "white"
                font_size: "24sp"
                font_name: "assets/fonts/futuralightc.otf"
                font_style: "H6"

        MDBoxLayout:
            id: box
            spacing: "32dp"
            padding: "48dp"
            pos_hint: {"center_x": 0.5, "center_y": 0.5}
            size_hint_y:1

            MainCard:
                on_release: root.switch_screen("login screen")
                on_release: root.set_screen_is_active(False)

                FitImage:
                    source: "assets/images/account_1.png"
                    radius: 24, 24, 0, 0
                    size_hint_y: 8
                    pos_hint: {"top": 1}

                MainLabel:
                    text: "Войти"

            MainCard:

                FitImage:
                    source: "assets/images/amp_curve_2.png"
                    radius: 24, 24, 0, 0
                    size_hint_y: 8
                    pos_hint: {"top": 1}

                MainLabel:
                    text: "Начало работы"

            MainCard:
                on_release: root.switch_screen("setting screen")
                on_release: root.set_screen_is_active(False)

                FitImage:
                    source: "assets/images/settings.png"
                    radius: 24, 24, 0, 0
                    size_hint_y: 8
                    pos_hint: {"top": 1}

                MainLabel:
                    text: "Настройки"

        