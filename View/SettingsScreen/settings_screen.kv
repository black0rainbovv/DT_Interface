        MDBoxLayout:
            orientation: "horizontal"
            size_hint: 0.4, None
            height: 32
            padding: [48, 0, 0, 0]
            #pos_hint: {"top": 1, "right": 0}
            MDLabel:
                text: "Отображать анимацию"
                size_hint_x: 0.3
