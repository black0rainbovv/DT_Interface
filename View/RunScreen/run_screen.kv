#:import STANDARD_INCREMENT kivymd.material_resources.STANDARD_INCREMENT

<RunScreenView>

    MDBoxLayout:
        orientation: 'vertical'
        pos_hint: {'center_x': .5, 'center_y': .5}
        
        AnchorLayout:
            size_hint: 1, 0.15
            MDTopAppBar:
                id: login_top_bar
                title: root.read_number()
                md_bg_color:'#001b31'
                right_action_items: 
                    [
                    ['help-circle', lambda x: root.callback(x), 'Help'],
                    ]

        MDProgressBar:
            id: progress_bar
            pos_hint: {'center_x': .5, 'center_y': 0.99}
            size_hint_y: 0.01
            type: 'determinate'
            running_duration: 1
            catching_duration: 1.5
            
        MDBoxLayout:
            pos_hint: {'center_x': .5, 'center_y': .5}
                      
            MDBoxLayout:
                orientation: 'vertical'
                pos_hint: {'center_x': .5, 'center_y': .5}

                MDCard:
                    md_bg_color:'#001a32'
                    orientation: 'vertical'
                    pos_hint: {'center_x': .15,'center_y': .8}
                    size_hint: 0.3, 0.2
                    padding: [7, 0, 0, 0]
                    
                    MDLabel:
                        id: time_passed
                        text: 'Времени прошло:'
                        color: 'white'
                        font_size: '22sp'
                        font_name: 'assets/fonts/futuralightc.otf'

                    MDLabel:
                        id: time_left
                        text: 'Времени осталось:'
                        color: 'white'
                        font_size: '20sp'
                        font_name: 'assets/fonts/futuralightc.otf'

                    MDLabel:
                        text: ' '

                    MDLabel:
                        id: temperature_label
                        text: 'Температура\nтермоблока:'
                        color: 'white'
                        font_size: '22sp'
                        font_name: 'assets/fonts/futuralightc.otf'

            MDBoxLayout:
                id: run_box
                opacity: 0
                orientation: 'vertical'
                pos_hint: {'center_x': .95, 'center_y': .85}
                size_hint: 0.6, 0.3
                padding: [0, 10, 10, 0]

                MDCard:
                    md_bg_color:'#001a32'
                    orientation: 'vertical'
                    pos_hint: {'center_x': .5,'center_y': .9}
                    padding: 10
                    scaling: 20

                    MDLabel:
                        pos_hint: {'center_x': .6,'center_y': .5}
                        font_size: '22sp'
                        font_name: 'assets/fonts/futuralightc.otf'
                        text: 'Программа завершена'
                        color: 'white'

                    MDLabel:
                        text: ''

                    MDRaisedButton:
                        pos_hint: {'center_x': .5,'center_y': .5}
                        text: 'Выйти на главный экран'
                        md_bg_color: '#001b31'
                        line_color: (0.2, 0.2, 0.2, 0.8)
                        font_size: '20sp'
                        font_name: 'assets/fonts/futuralightc.otf'
                        on_release: root.exit_run()

        MDBoxLayout:
            id: bot_box
            pos_hint: {'center_x': .5, 'center_y': .5}
            size_hint_y: .1

            MDRaisedButton:
                size_hint_x: .3
                pos_hint: {'center_x': 1, 'center_y': .5}
                text: 'Остановить программу'
                md_bg_color: '#001b31'
                line_color: (0.2, 0.2, 0.2, 0.8)
                font_size: '24sp'
                font_name: 'assets/fonts/futuralightc.otf'
                font_style: 'H5'
                on_release: root.stop_run()

            MDRaisedButton:
                size_hint_x: .3
                pos_hint: {'center_x': 1, 'center_y': .5}
                text: 'Назад'
                md_bg_color: '#001b31'
                line_color: (0.2, 0.2, 0.2, 0.8)
                font_size: '24sp'
                font_name: 'assets/fonts/futuralightc.otf'
                font_style: 'H5'
                on_release: root.switch_screen('edit screen')