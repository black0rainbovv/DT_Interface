#:import STANDARD_INCREMENT kivymd.material_resources.STANDARD_INCREMENT

<GettingStartedView>
        
    MDBoxLayout:
        orientation: 'vertical'
        pos_hint: {'center_x': 0.5, 'center_y': 0.5}
        
        MDTopAppBar:
            id: maintopbar
            line_color: (0.2, 0.2, 0.2, 0.8)
            md_bg_color:'#001b31'
            right_action_items: 
                [
                ['help-circle', lambda x: root.callback(x), 'Помощь'],
                ['arrow-up-drop-circle-outline', lambda x: root.callback(x), 'Открыть\Закрыть'],
                ['power', lambda x: root.callback(x), 'Выключение']
                ]

            left_action_items: [["chevron-left-circle-outline", lambda x: root.callback(x), 'Назад']]

        MDBoxLayout:
            id: box
            spacing: '32dp'
            padding: '48dp'
            pos_hint: {'center_x': 0.5, 'center_y': 0.7}
            size_hint: 1, 1

            MainCard:
                on_release: root.last_run()

                FitImage:
                    source: 'assets/images/amp_curve.png'
                    radius: 24, 24, 0, 0
                    size_hint_y: 8
                    pos_hint: {'top': 1}

                MainLabel:
                    text: 'Последний запуск'

            MainCard:

                FitImage:
                    source: 'assets/images/amp_curve_3.png'
                    radius: 24, 24, 0, 0
                    size_hint_y: 8
                    pos_hint: {'top': 1}

                MainLabel:
                    text: 'Новый протокол'

            MainCard:

                FitImage:
                    source: 'assets/images/book.png'
                    radius: 24, 24, 0, 0
                    size_hint_y: 12
                    pos_hint: {'top': 1}

                MainLabel:
                    text: 'История'

        